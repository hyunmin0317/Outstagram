<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.outstagram">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.outstagram.MasterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/MyTheme">
        <activity android:name="com.example.outstagram.OutStagramUploadActivity" />
        <activity android:name="com.example.outstagram.OutStagramMyPostListActivity" />
        <activity android:name="com.example.outstagram.OutStagramUserInfo" />
        <activity android:name="com.example.outstagram.OutStagramPostListActivity" />
        <activity android:name="com.example.outstagram.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.outstagram.EmailSignupActivity" />
    </application>

</manifest>